- content_for :recognition_type_body do
  .audio-source-block-record
    #flash-container
    %button#record.j.btn.btn-large.btn-success
      = t('audio_sources.record.record')
    %button#play.btn.btn-large.btn-primary.hidden
      = t('audio_sources.record.play')
    %button#stop.btn.btn-large.btn-danger.hidden
      = t('audio_sources.record.stop')
    %button#submit.btn.btn-large.btn-primary.disabled
      = t('audio_sources.record.submit')
= render 'recognition'